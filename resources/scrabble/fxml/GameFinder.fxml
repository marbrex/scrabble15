<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0"
  xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="scrabble.GameFinderController">
  <children>
    <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
      <image>
        <Image url="@../img/GameFinder8000x6000.jpg"/>
      </image>
    </ImageView>
    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0">
      <children>
        <JFXButton fx:id="backButton" buttonType="RAISED" onAction="#backButtonAction" opacity="0.5"
          text="Back" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" opacity="0.5" pickOnBounds="true"
              preserveRatio="true">
              <image>
                <Image url="@../img/survey.png"/>
              </image>
            </ImageView>
            <CheckBox fx:id="portBox" disable="true" mnemonicParsing="false" opacity="0.5"
              text="Port"/>
            <Label fx:id="statusLabel"/>
            <Label fx:id="statusLabel2"/>
            <JFXButton fx:id="joinBtn" buttonType="RAISED" disable="true" onAction="#joinAction"
              opacity="0.5" text="Join"/>
            <RadioButton fx:id="useOwnPort" disable="true" mnemonicParsing="false"
              onAction="#ownPortWanted" opacity="0.5" text="Use own port"/>
            <TextField fx:id="portField" disable="true" editable="false" opacity="0.5"
              visible="false">
              <effect>
                <Reflection/>
              </effect>
            </TextField>
            <Button disable="true" mnemonicParsing="false" opacity="0.5" text="Search"
              visible="false"/>
          </children>
        </VBox>
      </children>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>
    </AnchorPane>
  </children>
</StackPane>
