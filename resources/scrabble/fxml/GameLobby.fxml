<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0"
  xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="scrabble.GameLobbyController">
  <children>
    <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
      <image>
        <Image url="@../img/GameLobby8000x6000.jpg"/>
      </image>
    </ImageView>
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
        <VBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="100.0" spacing="10.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
            <Label fx:id="timeLabel" text="Time">
              <font>
                <Font size="18.0"/>
              </font>
            </Label>
          </children>
        </VBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
            <VBox fx:id="profile0" alignment="CENTER" disable="true" prefHeight="200.0"
              prefWidth="100.0" spacing="5.0" visible="false">
              <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" opacity="0.5" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../img/default-avatar-icon.png"/>
                  </image>
                </ImageView>
                <Label opacity="0.5" text="Player 1"/>
              </children>
            </VBox>
            <VBox fx:id="profile1" alignment="CENTER" disable="true" prefHeight="200.0"
              prefWidth="100.0" spacing="5.0" visible="false">
              <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" opacity="0.5" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../img/default-avatar-icon.png"/>
                  </image>
                </ImageView>
                <Label opacity="0.5" text="Player 2"/>
              </children>
            </VBox>
            <VBox fx:id="profile2" alignment="CENTER" disable="true" prefHeight="200.0"
              prefWidth="100.0" spacing="5.0" visible="false">
              <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" opacity="0.5" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../img/default-avatar-icon.png"/>
                  </image>
                </ImageView>
                <Label opacity="0.5" text="Player 3"/>
              </children>
            </VBox>
            <VBox fx:id="profile3" alignment="CENTER" disable="true" prefHeight="200.0"
              prefWidth="100.0" spacing="5.0" visible="false">
              <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" opacity="0.5" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../img/default-avatar-icon.png"/>
                  </image>
                </ImageView>
                <Label opacity="0.5" text="Player 4"/>
              </children>
            </VBox>
          </children>
        </VBox>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="200.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
            <TextArea disable="true" maxHeight="-Infinity" maxWidth="-Infinity" opacity="0.5"
              prefHeight="400.0" prefWidth="200.0"/>
            <HBox prefHeight="100.0" prefWidth="200.0">
              <children>
                <TextField maxWidth="-Infinity" opacity="0.5" prefWidth="150.0">
                  <effect>
                    <Reflection/>
                  </effect>
                </TextField>
                <Button mnemonicParsing="false" opacity="0.5" text="Send">
                  <effect>
                    <Reflection/>
                  </effect>
                </Button>
              </children>
            </HBox>
          </children>
        </VBox>
        <JFXButton fx:id="backButton" buttonType="RAISED" onAction="#backAction" opacity="0.5"
          text="Back" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
      </children>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>
    </AnchorPane>
  </children>
</StackPane>
